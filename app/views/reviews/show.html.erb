<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-10 col-md-offset-3">
    <div class="row">
      <div class="col-md-10">
        <h4><strong><%= @review.title %> at <%= @review.restaurant.name %></strong></h4>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <a href="#" class="thumbnail">
            <img src="http://placehold.it/260x180" alt="">
        </a>
      </div>
      <div class="col-md-5">      
        <p>
         <%= @review.details %>
        </p>
        
      </div>
    </div>
    <div class="row">
      <div class="col-md-8">
        <p></p>
        <p>
          <i class="icon-user"></i> by <%= @review.user.name %>
          | <i class="icon-calendar"></i> <%= @review.date %>
          <% if current_user == @review.user %>
          |<%= link_to 'Edit', edit_review_path(@review) %> 
           | <%= link_to 'Back', reviews_path %>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>